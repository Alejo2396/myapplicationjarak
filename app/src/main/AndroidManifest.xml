<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jarak.myapplicationjarak">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationJarak">
        <activity
            android:name=".login"
            android:exported="true" />
        <activity
            android:name=".MemoryGameActivity"
            android:exported="true" /> <!-- Activity principal (app launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Activities internas -->
        <activity
            android:name=".MenuPrincipalActivity"
            android:exported="true" />
        <activity
            android:name=".Home"
            android:exported="true" />
        <activity
            android:name=".Aprender"
            android:exported="true" />
        <activity
            android:name=".Numbers"
            android:exported="false" />
        <activity
            android:name=".Colores"
            android:exported="false" />
        <activity
            android:name=".Fruits"
            android:exported="false" />
        <activity
            android:name=".Animales"
            android:exported="false" />
    </application>

</manifest>
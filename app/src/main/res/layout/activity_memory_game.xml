<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#FFF8E1">

    <!-- ðŸŸ¦ Tablero de juego -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="4"
        android:padding="8dp"
        android:gravity="center" />

    <!-- ðŸŸ¨ SecciÃ³n inferior de informaciÃ³n y botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="16dp">

        <!-- Textos de puntuaciÃ³n -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aciertos: 0"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="#2E7D32" />

            <TextView
                android:id="@+id/tvErrors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Errores: 0"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ® JUGAR"
                android:layout_margin="8dp"
                android:backgroundTint="@color/blue"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/btnResolve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Resolver"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF" />
        </LinearLayout>

            <Button
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ  Inicio"
                android:layout_marginTop="12dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
